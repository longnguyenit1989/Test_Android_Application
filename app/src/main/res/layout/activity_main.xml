<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <Button
            android:id="@+id/btnClickMe"
            style="@style/center_parent_constrain_layout"
            android:text="@string/click_me"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn1"
            style="@style/center_parent_constrain_layout"
            android:text="1"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn2"
            style="@style/center_parent_constrain_layout"
            android:text="2"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn3"
            style="@style/center_parent_constrain_layout"
            android:text="3"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn4"
            style="@style/center_parent_constrain_layout"
            android:text="4"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn5"
            style="@style/center_parent_constrain_layout"
            android:text="5"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn6"
            style="@style/center_parent_constrain_layout"
            android:text="6"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn7"
            style="@style/center_parent_constrain_layout"
            android:text="7"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn8"
            style="@style/center_parent_constrain_layout"
            android:text="8"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnMap"
            style="@style/button_default"
            android:layout_marginBottom="120dp"
            android:text="@string/map"
            app:layout_constraintBottom_toTopOf="@+id/btnClickMe"
            app:layout_constraintStart_toStartOf="@+id/btnClickMe"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnRecycleViewMultiLevel"
            style="@style/button_default"
            android:layout_marginBottom="20dp"
            android:text="@string/recycle_view_multi_level"
            app:layout_constraintBottom_toTopOf="@+id/btnRecycleViewSwipe"
            app:layout_constraintStart_toStartOf="@+id/btnRecycleViewSwipe"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnRecycleViewSwipe"
            style="@style/button_default"
            android:layout_marginBottom="20dp"
            android:text="@string/recycle_view_swipe"
            app:layout_constraintBottom_toTopOf="@+id/btnRecycleViewTouch"
            app:layout_constraintStart_toStartOf="@+id/btnRecycleViewTouch"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnRecycleViewTouch"
            style="@style/button_default"
            android:layout_marginBottom="20dp"
            android:text="@string/recycle_view_touch"
            app:layout_constraintBottom_toTopOf="@+id/btnMoveButton"
            app:layout_constraintStart_toStartOf="@+id/btnMoveButton"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnMoveButton"
            style="@style/button_default"
            android:layout_marginBottom="20dp"
            android:text="@string/move"
            app:layout_constraintBottom_toTopOf="@+id/btnMap"
            app:layout_constraintStart_toStartOf="@+id/btnMap"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnCoordinate"
            style="@style/button_default"
            android:layout_marginTop="120dp"
            android:text="@string/coordinate_system"
            app:layout_constraintStart_toStartOf="@+id/btnClickMe"
            app:layout_constraintTop_toBottomOf="@+id/btnClickMe"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnDraw"
            style="@style/button_default"
            android:layout_marginTop="20dp"
            android:text="@string/draw"
            app:layout_constraintStart_toStartOf="@+id/btnCoordinate"
            app:layout_constraintTop_toBottomOf="@+id/btnCoordinate"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnFilterImage"
            style="@style/button_default"
            android:layout_marginTop="20dp"
            android:text="@string/filter_image"
            app:layout_constraintStart_toStartOf="@+id/btnDraw"
            app:layout_constraintTop_toBottomOf="@+id/btnDraw"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnChooseAndCropImage"
            style="@style/button_default"
            android:layout_marginTop="20dp"
            android:text="@string/choose_crop_image"
            app:layout_constraintStart_toStartOf="@+id/btnFilterImage"
            app:layout_constraintTop_toBottomOf="@+id/btnFilterImage"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnSearchTag"
            style="@style/button_default"
            android:layout_marginTop="20dp"
            android:text="@string/search_tag"
            app:layout_constraintStart_toStartOf="@+id/btnChooseAndCropImage"
            app:layout_constraintTop_toBottomOf="@+id/btnChooseAndCropImage"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnChooseLanguage"
            style="@style/button_default"
            android:layout_marginTop="20dp"
            android:text="@string/language_select"
            app:layout_constraintStart_toStartOf="@+id/btnChooseAndCropImage"
            app:layout_constraintTop_toBottomOf="@+id/btnChooseAndCropImage"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnBiometric"
            style="@style/button_default"
            android:layout_marginTop="20dp"
            android:text="@string/auth"
            app:layout_constraintStart_toStartOf="@+id/btnChooseLanguage"
            app:layout_constraintTop_toBottomOf="@+id/btnChooseLanguage"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

