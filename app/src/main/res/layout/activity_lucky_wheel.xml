<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/x_light_grey"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edtChoices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_choices_separated_by_commas"
            android:importantForAutofill="no"
            android:inputType="text"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/input" />

    </LinearLayout>

    <com.example.testapplication.ui.luckywheel.WheelView
        android:id="@+id/wheelView"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgPointer"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:rotation="180"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_right_arrow"
        android:translationX="-12dp"
        app:layout_constraintBottom_toBottomOf="@id/wheelView"
        app:layout_constraintStart_toEndOf="@id/wheelView"
        app:layout_constraintTop_toTopOf="@id/wheelView" />

    <com.example.testapplication.ui.luckywheel.ConfettiView
        android:id="@+id/confettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>
