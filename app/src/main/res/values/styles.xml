<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="BaseText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/default_text_size_lv0</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_number_gray_color_standard</item>
    </style>

    <style name="BoldText" parent="BaseText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LineText1" parent="BaseText">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LineText2" parent="BaseText">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ItalicText" parent="BaseText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BaseBlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_height_view</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/large_text_size_lv1_5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/large_margin_lv1</item>
    </style>

    <style name="ErrorBaseText" parent="BaseText">
        <item name="android:textColor">@color/error_text_color_standard</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:textSize">@dimen/large_text_size_lv1_5</item>
    </style>

    <style name="BaseViewHorizontal1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_view_smallest</item>
    </style>

    <style name="ViewHorizontal1dpGreyLight" parent="BaseViewHorizontal1dp">
        <item name="android:background">@color/line_gray_light_color_standard</item>
    </style>

</resources>
